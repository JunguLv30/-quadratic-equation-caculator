#include <stdio.h>
#include <math.h>

double a,b,c,x1,x2,flag
void gesan1();
// ax+b =c 의 형태로 입력  

{
		int k=gen();
		
		switch (k) {
			case (k==1) {
				x1=gen1()
				break;
			}
			
			case (k==0) {
				x1=null;
				break;
			}
		}
}

